root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{LICENSE,*.md,*.txt}]
# these files are often read from terminal
max_line_length = 80
trim_trailing_whitespace = false

[*.py]
indent_size = 4
max_line_length = 79

[*.toml]
indent_size = 4
